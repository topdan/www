<ul id="posters">
{% for movie in movies %}
  <li class="{{ movie.permalink }}">
    <p class="poster">
      {% if movie.rotten_tomatoes_url %}
      <a href="{{ movie.rotten_tomatoes_url }}"><img src="{{ movie.poster_url }}" alt="{{ movie.title | escape }}"/></a>
      {% else %}
      <img src="{{ movie.poster_url }}" alt="{{ movie.title | escape }}"/>
      {% endif %}
    </p>

    <p class="media-links">
      {% if movie.netflix_url and movie.on_netflix_instant %}<a href="{{ movie.netflix_url | escape }}"><img src="/assets/entertainment/16x16/netflix-8bde6efce34442376d049b211ba09d79.png" alt="netflix"/></a>{% endif %}
      {% if movie.amazon_url %}
        {% if movie.on_amazon_prime %}
          <a href="{{ movie.amazon_url | escape }}"><img src="/assets/entertainment/amazon-prime-5ebc65569210920094fb68189a6ea4ed.png" alt="amazon"/></a>
        {% else %}
          <a href="{{ movie.amazon_url | escape }}"><img src="/assets/entertainment/16x16/amazon-ce50ceee80d4df50e61fe60d2375db12.png" alt="amazon"/></a>
        {% endif %}
      {% endif %}
      {% if movie.showtime_url %}<a href="{{ movie.showtime_url | escape }}"><img src="/assets/entertainment/16x16/showtime-689bdf48f3c6585fced9b1ea61f32f1a.png" alt="showtime"/></a>{% endif %}
      {% if movie.hbogo_url %}<a href="{{ movie.hbogo_url | escape }}"><img src="/assets/entertainment/hbo-a6d69d21da481aad3fcf6187e5ef2365.png" alt="HBOgo"/></a>{% endif %}
      {% if movie.maxgo_url %}<a href="{{ movie.maxgo_url | escape }}"><img src="/assets/entertainment/cinemax-e988a0df11bca746327ff85038e3c9ef.png" alt="MAXgo"/></a>{% endif %}
    </p>

    <p class="title">
      {% if movie.rotten_tomatoes_url %}
        <a href="{{ movie.rotten_tomatoes_url }}">{{ movie.title | escape }}</a>
      {% else %}
        {{ movie.title | escape }}
      {% endif %}
    </p>
  </li>
{% endfor %}
</ul>
