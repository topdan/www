<div class="row bg-white pt-2e pb-2e">
  <div class="col-md-12">
    <div class="width-640 ml-auto mr-auto">
      <p><%= post_image_tag 'fosters.jpg', class: 'full-width' %></p>
    </div>
  </div>
</div>

<div class="row posters bg-white pt-2e pb-2e">
  <% @current_post.data.each do |data| %>
    <div class="poster-300">
      <h3 class="center"><%= link_to data.show, data.video_url %></h3>
      <p class="center"><%= link_to image_tag(data.thumbnail_url, width: 240), data.video_url %></p>
      <%= post_markdown data.description %>
    </div>
  <% end %>
</div>
